{
  "compilerOptions": {
    /* ✔ Output Settings */
    "outDir": "dist",
    "declaration": true,
    "sourceMap": false,
    "removeComments": true,

    /* ✔ Targeting & Modules */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* ✔ Type Safety */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* ✔ Type Support */
    "types": ["node"],
    "resolveJsonModule": true,

    /* ✔ Project Cleanliness */
    "skipLibCheck": true
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["dist", "node_modules", "test", "**/*.test.ts"]
}
