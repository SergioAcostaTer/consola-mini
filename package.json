{
  "name": "consola-mini",
  "version": "0.0.6",
  "description": "A zero-dependency, colorful and minimal console logger for Node.js backends.",
  "type": "module",
  "main": "./dist/log.cjs",
  "module": "./dist/log.mjs",
  "types": "./dist/log.d.ts",
  "exports": {
    ".": {
      "require": "./dist/log.cjs",
      "import": "./dist/log.mjs",
      "types": "./dist/log.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "ts-node index.ts",
    "test": "node ./test/log.test.js",
    "prepare": "npm run build"
  },
  "keywords": [
    "logger",
    "typescript",
    "console",
    "minimal",
    "backend"
  ],
  "author": {
    "name": "Sergio Acosta Quintana",
    "url": "https://sergioaco.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SergioAcostaTer/consola-mini.git"
  },
  "devDependencies": {
    "@types/node": "^22.13.15",
    "ts-node": "^10.9.2",
    "tsup": "^7.2.0",
    "typescript": "^5.8.2"
  }
}
